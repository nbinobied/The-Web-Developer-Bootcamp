<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To YelpCamp!</h1>
            <p>View our hand-pick campgrounds form all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campgrounds</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Out Most Popuplar Campgrounds</h3>
        </div>
    </div>

    <div class="row text-center card-deck">
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-4 col-sm-6">
            <div class="card">
                <img src="<%= campground.image %>" class="img-fluid">
                <div class="card-title">
                    <h4><%= campground.name %></h4>
                </div>
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
        <% }); %>
    </div>
</div>
<% include partials/footer %>